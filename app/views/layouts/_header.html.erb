<header class="navbar navbar-inverse head">
  <div class="container">
    <%= link_to "支付结算账户管理系统", root_path,id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "首页",root_path%></li>

        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= @current_user.username %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "个人信息", current_user%></li>
                <li><%= link_to "设置", edit_user_path(current_user)%></li>
                <% if admin? %>
                  <li><%= link_to "用户列表", users_path %></li>
                  <li><%= link_to "订单列表", orders_path %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "退出",logout_path, method: :delete%></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "登录", login_path%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>