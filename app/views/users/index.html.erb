<div class="col-md-8">
    <%= form_tag({controller: "users",action: "index"}, method: "get") do %>
        <%= label_tag("请输入关键字") %>
        <%= text_field_tag(:search) %>
        <%= submit_tag("搜索")%>
    <% end %>
</div>
<% if  @users.nil? %>
    <h2>用户不存在</h2>
<%else%>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>邮件名</th>
      <th>用户类型</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
      <tr>
        <td><%= link_to user.email, user_path(user) %></td>
        <% if user.user_type == "1" %>
        <td>用户</td>
        <% elsif user.user_type == "2" %>
        <td>商户</td>
        <% else user.user_type == "3" %>
        <td>管理员</td>
        <% end %>
        <td><%= link_to "删除", user, method: :delete,data: {confirm: "确定删除?"}%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
<% end %>