<h1>请修改您的个人信息</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= f.label("用户名:")  %>
        <%= f.text_field :username, class: 'form-control' %>
        <%= f.label("邮件:") %>
        <%= f.email_field :email, class: 'form-control' %>
        <% if @user.real_name.nil? %>
        <%= f.label("真实姓名")%>
        <%= f.text_field :real_name, class: 'form-control' %>
        <% end %>
        <%= f.label("手机号:")%>
        <%= f.text_field :phone, class: 'form-control' %>
        <% if @user.idcard.nil?%>
        <%= f.label("身份证") %>
            <%= f.text_field :idcard, class: 'form-control' %>
        <% end %>
        <%= f.label("密码:") %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :password_confirmation, "确认密码:" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= f.submit "保存", class: "btn btn-primary col-md-6" %>     <%= link_to "返回",:back ,class: "btn btn-primary col-md-6"%>
    <% end %>
  </div>
</div>