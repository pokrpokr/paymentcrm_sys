<h1>登 录</h1>
<div class="row" id="sessionform">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label "邮箱:" %>
        <%= f.email_field :email %>
        <%= f.label "登录密码" %>
        <%= f.password_field :password %>
        <%= f.label "记住我", class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>记住我</span>
        <% end %>
        <%= f.submit "登 录", class: "btn btn-primary" %>
        <p>还没有账号? <%= link_to "去注册吧", signup_path %></p>
    <% end %>
  </div>
</div>
